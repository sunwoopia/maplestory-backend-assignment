{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "sourceRoot": "apps",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.build.json"
  },
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "event-service": {
      "type": "application",
      "root": "apps/event-service",
      "entryFile": "main",
      "sourceRoot": "apps/event-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/event-service/tsconfig.app.json"
      }
    },
    "auth-server": {
      "type": "application",
      "root": "apps/auth-server",
      "entryFile": "main",
      "sourceRoot": "apps/auth-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-server/tsconfig.app.json"
      }
    },
    "event-server": {
      "type": "application",
      "root": "apps/event-server",
      "entryFile": "main",
      "sourceRoot": "apps/event-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/event-server/tsconfig.app.json"
      }
    },
    "gateway-server": {
      "type": "application",
      "root": "apps/gateway-server",
      "entryFile": "main",
      "sourceRoot": "apps/gateway-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway-server/tsconfig.app.json"
      }
    }
  }
}